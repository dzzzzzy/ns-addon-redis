{
    "compilerOptions": {
        "module": "commonjs",
        "declaration": true,
        "noImplicitAny": false,
        "noUnusedLocals": false,
        "removeComments": false,
        "noLib": false,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "target": "es2017",
        "sourceMap": false,
        "allowJs": false,
        "rootDir": "./",
        "outDir": "../dist"
    },
    "include": [
        "src/*.ts"
    ],
    "exclude": [
        "node_modules",
        "test"
    ]
}